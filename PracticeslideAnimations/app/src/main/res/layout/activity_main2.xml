<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tool_bar_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2dadfe"
        android:elevation="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/to_show"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_appbar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@drawable/ic_action_search" />

            <ImageView
                android:id="@+id/imageArrow"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="-15dp"
                android:src="@drawable/ic_arrow_down" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#8baaaaaa" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/card_to_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_container"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_text"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="Location"
            android:padding="8dp"
            android:textColorHint="#8baaaaaa"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/ed2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text"

                android:drawableEnd="@drawable/ic_action_name"
                android:drawableStart="@drawable/ic_action_name"
                android:hint="Car Type"
                android:padding="8dp"
                android:textColorHint="#8baaaaaa"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed3"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text"
                android:drawableEnd="@drawable/ic_action_name"
                android:drawableStart="@drawable/ic_action_name"
                android:hint="Air Condi"
                android:padding="8dp"
                android:textColorHint="#8baaaaaa"
                android:textSize="15sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/ed4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_text"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="Location"
            android:padding="8dp"

            android:textColorHint="#8baaaaaa"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text"

                android:drawableEnd="@drawable/ic_action_name"
                android:hint="From"
                android:paddingEnd="12dp"

                android:paddingStart="12dp"
                android:textColorHint="#8baaaaaa"
                android:textSize="15sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text"
                android:drawableEnd="@drawable/ic_action_name"
                android:hint="To"
                android:paddingEnd="12dp"

                android:paddingStart="16dp"
                android:textColorHint="#8baaaaaa"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text"

                android:drawableLeft="@drawable/ic_action_name"
                android:hint="Min Price"
                android:paddingEnd="12dp"

                android:paddingStart="12dp"
                android:textColorHint="#8baaaaaa"
                android:textSize="15sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text"
                android:drawableLeft="@drawable/ic_action_name"
                android:hint="Max Price"
                android:paddingEnd="12dp"

                android:paddingStart="12dp"
                android:textColorHint="#8baaaaaa"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:text="Search "
                android:textAllCaps="false"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:elevation="2dp"
                android:paddingStart="80dp"
                android:src="@drawable/ic_arrow_right" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>